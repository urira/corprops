<%- include('../includes/head.ejs') %>
</head>

<body class="hold-transition login-page">


    <div class="login-box">
        <div class="login-logo">
            <a href="/">
                <img src="../../dist/img/coreprops-notext-blue-logo.png" alt="Core Properties Logo"
                    class="brand-image img-circle elevation-3" style="opacity: .8; height:70px" />
                <span class="brand-text font-weight-light">Core Properties</span>
            </a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <p class="text-danger"></p>
            <div class="card-body login-card-body">
                <% if (errorMessage) { %>
                <p class="text-danger"><%= errorMessage %></p>
                <% } %>
                <form action="/login" method="post">
                    <div class="input-group mb-3">
                        <input type="email" name="email" id="email" class="form-control" placeholder="Email"
                            value="<%= oldInput.email %>">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password"
                            class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                            placeholder="Password" name="password" id="password" value="<%= oldInput.password %>">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember">
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                <div class="social-auth-links text-center mb-3">
                    <p>- OR -</p>
                    <a href="#" class="btn btn-block btn-primary">
                        <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                    </a>
                    <a href="#" class="btn btn-block btn-danger">
                        <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                    </a>
                </div>
                <!-- /.social-auth-links -->

                <p class="mb-1">
                    <a href="reset">I forgot my password</a>
                </p>
                <p class="mb-0">
                    <a href="signup" class="text-center">Register a new membership</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->

    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../../dist/js/adminlte.min.js"></script>

</body>

</html>